@model IEnumerable<Product>
@{
    ViewData["Title"] = "Home Page";
}

 <div class="row pb-3">

     @foreach(var products in Model){
         <div class="col-lg-3 col-md-6">
            <div class="row p-2">
                <div class=" col-12 p-1" style="border:1px solid #008cba;border-radius:5px ">
             <div class="card">
                        <img src="https:\\localhost:7132\@products.ImageUrl" height="300px" class="card-img-top rounded" alt="Responsive image" />
                        <div class="card-body" style="height:150px;">
                 <div class="pl-1">
                            <p class="card-title h5 text-primary">@products.Tital</p>
                            <p class="card-title  text-info">by  <b>@products.Author</b></p>
                  </div>
                        <div class="pl-1">
                            <p>List Price:<strike><b>$@products.ListPrice.ToString("0.00")</b></strike></p>
                            <p>As low As: <b>$@products.Price1000.ToString("0.00")</b> </p>
                             
                        </div>
                        </div>
             </div>
             <div >
                        <a asp-action="Details" class="btn btn-primary form-control" asp-route-id="@products.Id">
                            Details
                        </a>
             </div>
                </div>


            </div>
         </div>

     }

 </div>
